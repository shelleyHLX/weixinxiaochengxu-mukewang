/* pages/index.wxss */
.header{
  position: relative;
}
.header-input{
  line-height: 72rpx;
  padding: 0 36rpx;
  margin: 22rpx 36rpx 14rpx 36rpx;
  border: 1rpx solid #d9dde1;
  border-radius: 36rpx;
  text-align: center;
  color: #858585;
  font-size: 26rpx;

}
.header-input-placeholder{
  color: rgba(133,133,133,.6);
}
.header-input-icon{
  position: absolute;
  left: 50%;
  top: 10rpx;
  transform: translateX(-180rpx);
  color: rgba(133,133,133,.6);
}
.navigator{
  display: flex;
  line-height: 112rpx;
}
.navigator-item{
  position: relative;
  flex: 1;
  text-align: center;
  vertical-align: middle;
  font-size: 32rpx;
  color: #2B333B;
}
.navigator-img{
  position: relative;
  top: 8rpx;
  width: 36rpx;
  height: 36rpx;
}
.navigator-active{
  position: absolute;
  width: 32rpx;
  height: 8rpx;
  background: #F01414;
  border-radius: 4rpx;
  left: 90rpx;
  bottom: 20rpx;
}
.swiper{
  height: 234rpx;
}
.swiper-item{
  box-sizing: border-box;
  padding: 0 6rpx;
}
.swiper-image{
  width: 708rpx;
  border-radius: 12rpx;
  height: 234rpx;
}
.project{
  margin-top: 32rpx;
  margin-left: 40rpx;
}
.project-title{
  line-height: 32rpx;
  font-size: 28rpx;
  color: #2B333B;
}
.project-item{
  display: flex;
  margin-top: 16rpx;
}
.project-item-pic{
  width: 208rpx;
  height: 136rpx;
  border-radius: 16rpx;
}
.project-item-content{
  flex: 1;
  margin-left: 24rpx;
  margin-right: 40rpx;
  padding-bottom: 28rpx;
  border-bottom: 1px solid #d9dde1;
}
.project-item-title{
  line-height: 40rpx;
  font-size: 32rpx;
  color: #2B333B;
  font-weight: bold;
}
.project-item-tags {
  margin-top: 12rpx;
  font-size: 24rpx;
}
.project-item-tags view{
  float: left;
  margin-right: 18rpx;
}
.project-item-text{
  color: #71777d;
}
.project-item-price-active{
  color: #F01414;
  font-weight: bold;
}
.project-item-notice{
  padding: 0 10rpx;
  background: rgba(242,13,13,0.1);
  border-radius: 4rpx;
  font-size: 20rpx;
  color: #f20d0d;
}
.project-item-user{
  line-height: 32rpx;
  color: #71777d;
}
.project-item-icon{
  position: relative;
  top: 3rpx;
  left: 4rpx;
  width: 22rpx;
  height: 20rpx;
}
